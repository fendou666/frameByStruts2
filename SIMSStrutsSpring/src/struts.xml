			</result>
		</action>
	</package>
	
	<package name="superAdmin" namespace="/" extends="inter">
		<action name="getNormAdminData" class="com.sims.mvc.controller.SuperAdminAction" method="queryAdmin">
			<result  type="json">
				<param name="root">result</param>
			</result>
		</action>
		<action name="getDelMesg" class="com.sims.mvc.controller.SuperAdminAction" method="delAdmin">
			<result  type="json">
				<param name="root">result</param>
			</result>
		</action>
		<action name="getAddMesg" class="com.sims.mvc.controller.SuperAdminAction" method="addAdmin">
			<result  type="json">
				<param name="root">result</param>
			</result>
		</action>
	</package>
	
	<package name="class" namespace="/" extends="inter">
		<action name="checkClassStudent" class="classAction" method="checkClassStudent">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
	
		<action name="showClass" class="classAction" method="showClass">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
	    
	    <action name="showTeam" class="classAction" method="showTeam">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		
		<action name="showTeamStudent" class="classAction" method="showTeamStudent">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
	    
		<action name="createTeam" class="classAction" method="createTeam">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
	
		<action name="appoinTeamLeader" class="classAction" method="appoinTeamLeader">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
	</package>
	
	<!-- 管理员action -->
	<package name="admin" namespace="/" extends="inter">
		<action name="getAllClassInfo" class="com.sims.mvc.controller.AdminAction" method="queryAllClassesInfo">
			<result  type="json">
