package com.eec.test;

import java.io.IOException;
import java.io.InputStream;

import org.apache.ibatis.io.Resources;
import org.apache.ibatis.session.SqlSession;
import org.apache.ibatis.session.SqlSessionFactory;
import org.apache.ibatis.session.SqlSessionFactoryBuilder;
import org.junit.Before;
import org.junit.Test;

import com.chinasofti.eecuser.model.dao.UserInfoMapper;
import com.chinasofti.eecuser.model.javabean.UserInfo;

public class testMybatis {
	@Test
	public void testDao() throws IOException{
		
		// 获取配置流
		InputStream is = Resources.getResourceAsStream("com/chinasofti/eecuser/config/mybatis.xml");
		// 创建工厂
		SqlSessionFactory sqfc = new  SqlSessionFactoryBuilder().build(is);
		SqlSession ops = sqfc.openSession();
		UserInfoMapper uMap = ops.getMapper(UserInfoMapper.class);
		UserInfo userInfo = uMap.selectByPrimaryKey(170203021L);
		System.out.println(userInfo.toString());
	}
	
}
